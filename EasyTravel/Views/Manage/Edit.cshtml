@model IndexViewModel

@{
    ViewData["Title"] = "Edit";
}
@{
    ViewData.AddActivePage(ManageNavPages.Index);
}
@Html.Partial("_StatusMessage", Model.StatusMessage)


<section>
    <div class="db">
        <div class="db-l">
            <div class="db-l-1">
                <ul>
                    <li>
                        <img src="~/images/db-profile.jpg" alt="" />
                    </li>
                    <li>Full Name here</li>
                </ul>
            </div>
            <div class="db-l-2">
                <ul>
                    <li>
                        <a asp-controller="Manage" asp-action="index"><img src="~/images/icon/dbl6.png" alt="" /> My Profile</a>
                    </li>
                    <li>
                        <a href="#"><img src="~/images/icon/dbl1.png" alt="" /> All Bookings</a>
                    </li>
                    <li>
                        <a href="#"><img src="~/images/icon/dbl2.png" alt="" /> Gift Cards</a>
                    </li>
                </ul>
            </div>

        </div>
        <div class="db-2">
            <div class="db-2-com db-2-main">
                <h4>Edit My Profile </h4>
                <div class="db-2-main-com db2-form-pay db2-form-com">
                    <form class="col s12" asp-controller="Manage" asp-action="Edit">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="row">
                            <div class="input-field col s12">
                                <input asp-for="Username" class="validate" disabled>
                                <label asp-for="Username">UserName</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <input asp-for="FirstName" class="validate">
                                <label asp-for="FirstName">First Name</label>
                            </div>
                            <div class="input-field col s6">
                                <input asp-for="LastName" class="validate">
                                <label asp-for="LastName">Last Name</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12 m6">
                                <input asp-for="Email" class="validate">
                                <label asp-for="Email">Email id</label>
                            </div>
                            <div class="input-field col s12 m6">
                                <input asp-for="PhoneNumber" type="number" class="validate">
                                <label asp-for="PhoneNumber">Phone</label>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <input asp-for="Address" class="validate">
                                <label asp-for="Address">Address</label>
                            </div>
                        </div>
                        <div class="row db-file-upload">
                            <div class="file-field input-field">
                                <div class="db-up-btn">
                                    <span>Profile Pic</span>
                                    <input type="file">
                                </div>
                                <div class="file-path-wrapper">
                                    <input class="file-path validate" type="text">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <button type="submit" value="Save" class="waves-effect waves-light full-btn">Save</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="db-l">
            <div class="db-l-1">

            </div>
        </div>
    </div>
</section>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
